{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "inputNecessityIndicators": "requiredInputs",
  "displayInputSuccessIndicators": true,
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "items": [
            {
              "type": "TextBlock",
              "text": "Sifre Resetleme Talep Formu",
              "weight": "Bolder",
              "size": "Medium"
            },
            {
              "type": "TextBlock",
              "text": "Lutfen tum bilgileri doldurunuz.",
              "isSubtle": true,
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "Application Name",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "Application",
              "placeholder": "Lutfen Application Name Giriniz.",
              "isRequired": true,
              "regex": "^\\w{5,50}$",
              "errorMessage": "Application must be between 5 and 50 characters long."
            },
            {
              "type": "TextBlock",
              "text": "E-Mail",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "Email",
              "placeholder": "mail@daimler.com",
              "style": "Email",
              "isRequired": true,
              "regex": "^\\w{5,50}$",
              "errorMessage": "Email must be between 5 and 50 characters long."
            },
            {
              "type": "TextBlock",
              "text": "Username",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "UserName",
              "placeholder": "Username Giriniz",
              "style": "Tel",
              "isRequired": true,
              "regex": "^\\w{5,50}$",
              "errorMessage": "Username must be between 5 and 50 characters long."
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Gonder",
      "requiredInputs": [
        "Application",
        "Email",
        "UserName"
      ]
    }
  ]
}