{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "inputNecessityIndicators": "requiredInputs",
  "displayInputSuccessIndicators": true,
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "items": [
            {
              "type": "Image",
              "altText": "",
              "url": "https://logos-download.com/wp-content/uploads/2016/02/Mercedes_Benz_logo_gradient.svg",
              "width": "40px",
              "horizontalAlignment": "Center",
              "height": "40px"
            },
            {
              "type": "TextBlock",
              "text": "Sifre Resetleme Talep Formu",
              "weight": "Bolder",
              "size": "Medium"
            },
            {
              "type": "TextBlock",
              "text": "Lutfen tum bilgileri doldurunuz.",
              "isSubtle": true,
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "Application Name",
              "wrap": true
            },
            {
              "type": "Input.ChoiceSet",
              "placeholder": "Placeholder text",
              "choices": [
                {
                  "title": "Go",
                  "value": "Go"
                },
                {
                  "title": "Gems",
                  "value": "Gems"
                },
                {
                  "title": "Autoline",
                  "value": "Autoline"
                }
              ],
              "style": "expanded",
              "id": "Application"
            },
            {
              "type": "TextBlock",
              "text": "E-Mail",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "Email",
              "placeholder": "mail@daimler.com",
              "style": "Email",
              "isRequired": true,
              "regex": "^\\w{5,50}$",
              "errorMessage": "Email must be between 5 and 50 characters long."
            },
            {
              "type": "TextBlock",
              "text": "Username",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "UserName",
              "placeholder": "Username Giriniz",
              "style": "Tel",
              "isRequired": true,
              "regex": "^\\w{5,50}$",
              "errorMessage": "Username must be between 5 and 50 characters long."
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Gonder",
      "requiredInputs": [
        "Application",
        "Email",
        "UserName"
      ]
    }
  ]
}